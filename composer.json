{
  "name": "mnavarrocarter/php-llm",
  "description": "A toolkit to quickly build applications using Large Language Models in PHP",
  "minimum-stability": "stable",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Matias Navarro-Carter",
      "email": "mnavarrocarter@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-redis": "*",
    "ext-ffi": "*",
    "timkley/weaviate-php": "^0.4.0",
    "ramsey/uuid": "^4.7",
    "elasticsearch/elasticsearch": "^8.0",
    "opensearch-project/opensearch-php": "^2.2",
    "predis/predis": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "MNC\\LLM\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MNC\\LLM\\": "tests"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.2",
    "friendsofphp/php-cs-fixer": "^3.22",
    "vimeo/psalm": "^5.13",
    "openai-php/client": "^0.6.4",
    "guzzlehttp/guzzle": "^7.7",
    "yethee/tiktoken": "^0.1.2",
    "symfony/var-dumper": "^6.3"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": false
    }
  }
}
